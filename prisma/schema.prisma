generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Application {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  position  String
  resume    String
  message   String
  createdAt DateTime @default(now())
  
  @@map("applications")
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  company   String?
  interest  String
  message   String
  createdAt DateTime @default(now())
  
  @@map("contacts")
}

model Newsletter {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  
  @@map("newsletters")
}
